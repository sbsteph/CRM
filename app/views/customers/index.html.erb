<p id="notice"><%= notice %></p>

<h1>List Customers</h1>

<div id="customers">
  <%= render @customers %>
</div>

<%= form_for(Customer.new, remote: true) do |f| %>
  <div class="field">
    <%= f.label :name %> <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Create Customer', new_customer_path %>

